<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_prof"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@color/shimmerBackground"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_prof"
            android:layout_toLeftOf="@id/iv_call"
            android:layout_toRightOf="@+id/iv_prof"
            android:layout_toStartOf="@id/iv_call"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingEnd="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:paddingStart="10dp"
            tools:ignore="RelativeOverlap">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:background="@color/shimmerBackground"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/shimmerBackground" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/shimmerBackground"
            android:contentDescription="@string/img_description"
            android:src="@drawable/ic_call_grey_24dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
